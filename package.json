{
  "name": "@capraconsulting/cals-cli",
  "version": "0.0.0-development",
  "description": "CLI for repeatable tasks in CALS",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "tsx scripts/create-definition-schema.ts && husky",
    "build": "rollup -c",
    "test": "vitest run --coverage src",
    "test:watch": "vitest --coverage src",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "format": "biome format --write",
    "prepack": "./scripts/build-and-verify.sh",
    "semantic-release": "semantic-release",
    "watch": "rollup -c -w",
    "upgrade-deps": "ncu --upgrade --install=always"
  },
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "bin": {
    "cals": "lib/cals-cli.mjs"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@types/dateformat": "5.0.3",
    "ajv": "^8.17.1",
    "cachedir": "^2.4.0",
    "chalk": "5.6.2",
    "execa": "^9.6.0",
    "find-up": "^8.0.0",
    "js-yaml": "^4.1.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^7.1.1",
    "p-map": "^7.0.3",
    "process": "0.11.10",
    "read": "^4.1.0",
    "semver": "^7.7.2",
    "sprintf-js": "^1.1.3",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@octokit/types": "15.0.1",
    "@rollup/plugin-alias": "5.1.1",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-replace": "6.0.2",
    "@types/js-yaml": "4.0.9",
    "@types/lodash-es": "4.17.12",
    "@types/node": "24.9.2",
    "@types/node-fetch": "2.6.13",
    "@types/read": "3.0.0",
    "@types/semver": "7.7.1",
    "@types/sprintf-js": "1.1.4",
    "@types/yargs": "17.0.34",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "dateformat": "5.0.3",
    "husky": "9.1.7",
    "npm-check-updates": "19.1.2",
    "rollup": "4.52.5",
    "rollup-plugin-typescript2": "0.36.0",
    "semantic-release": "25.0.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-json-schema": "0.65.1",
    "vitest": "3.2.4"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/capralifecycle/cals-cli.git"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
